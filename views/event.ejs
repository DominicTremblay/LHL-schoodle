    <!-- EVENT SCSS -->
    <link rel="stylesheet" href="/styles/event.css" type="text/css" />

    <!-- COPIED FROM INDEX -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
