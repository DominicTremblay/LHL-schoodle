    <!-- ////////////////// -->

    <!-- External JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <!-- EVENT JS JQUERY -->
    <script type="text/javascript" src="/scripts/event.js"></script>

    <!-- MOMENT JS -->
    <script type="text/javascript" src="/scripts/moment.min.js"></script>

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
      crossorigin="anonymous"
    />

    <title>eventME - Event</title>
  </head>
  <!-- //////////////// -->
  <!-- BODY STARTS HERE -->
  <!-- //////////////// -->
  <body>
    <!-- PLACEHOLDER NAV -->
    <nav style="width: 100vw; height: 100px; background-color: blue;">
      placeholder
    </nav>

    <!-- MAIN WRAPPER -->
    <div class="main-wrapper" data-id="<%= event.event_id %>">
      <!-- EVENT HEADER -->
      <div class="event-header">
        <h2><%= event.title %></h2>
        <p><span class="bolder-weigth">By:</span> <%= event.name %></p>
        <p>
          <span class="bolder-weigth">Location:</span> <%= event.location %>
        </p>
        <!-- NEED TO CREATE BUTTON FOR CREATOR ONLY -->
        <div class="a2a_kit a2a_kit_size_32 a2a_default_style">
          <a class="a2a_button_email"></a>
          <a class="a2a_button_facebook_messenger"></a>
          <a class="a2a_button_linkedin"></a>
          <a class="a2a_button_copy_link"></a>
        </div>
      </div>

      <!-- EVENT BODY / POLL -->
      <div>
        <div class="poll_container">
          <!-- row containing date information + the first cell is always empty -->
          <div class="poll_container_participant">
            <img
              src="https://www.pngfind.com/pngs/m/5-59769_emoticon-text-smiley-messaging-emoji-png-image-high.png"
              alt="Smiley face"
              width="30"
              height="30"
            />
            <input
              type="text"
              value="<%= event.name %>"
              id="participant_name"
              placeholder="Enter your name"
              required="required"
              maxlength="64"
              aria-label="Your name"
            />
            <input
              type="email"
              value="<%= event.email %>"
              id="participant_email"
              placeholder="Enter your email"
              required="required"
            />
          </div>
          <!-- row containing the votes count -->
          <ul class="dates_list">
            <!-- every new date is it's own li with date / vote counter / and checkbox -->
            <!-- <li class="date_list_row">
              date
              <div class="date_option">
                <div class="d-month">Apr</div>
                <div class="d-date">7</div>
                <div class="d-day">Tue</div>
              </div>
              vote counter
              <div class="vote_counter">
                <div>0 votes</div>
              </div>
              checkbox
              <input type="checkbox" id="" name="" value="">
            </li> -->
          </ul>
        </div>
      </div>

      <!-- COMMENT SESSION TO DO IF TIME -->
      <!-- <div>
        <form id="comment-event">
          <textarea
            name="text"
            id="comment-text"
            placeholder="Leave your comment!"
          ></textarea>
          <div class="comment-event-btn">
            <button type="submit">Submit</button>
          </div>
        </form>
      </div>
    </div> -->
    <form>
      <a id="event-submit-btn" class="btn btn-outline-light btn-lg" href="#">Submit</a>
    </form>


    <!-- Bootstrap JS -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>

    <!-- SHARE BUTTONS -->
    <script async src="https://static.addtoany.com/menu/page.js"></script>
  </body>
</html>
